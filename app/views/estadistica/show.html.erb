
<%if current_user%>
<h3>Usted a ingresado al sistema <%= current_user.sign_in_count%> veces</h3>

<h3>la ultima conexion fue desde </h3>
<%= current_user.last_sign_in_ip%>

<script type="text/javascript">
$(function () {
    $.getJSON('https://www.highcharts.com/samples/data/jsonp.php?filename=usdeur.json&callback=?', function (data) {

        $('#estadistica').highcharts({


            chart: {
                zoomType: 'x',
                useUTC: false
            },
            title: {
                text: 'Rango de Visitas'
            },
            xAxis: {
            	type: 'datetime'
            },
            yAxis: {
            	type: 'datetime',
            	
            },
            legend: {
                enabled: true
            },
            plotOptions: {
                area: {
                    fillColor: {
                        linearGradient: {
                            x1: 2,
                            y1: 0,
                            x2: 2,
                            y2: 1
                        },
                        stops: [
                            [0, Highcharts.getOptions().colors[0]],
                            [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        ]
                    },
                    marker: {
                        radius: 2
                    },
                    lineWidth: 1,
                    states: {
                        hover: {
                            lineWidth: 1
                        }
                    },
                    threshold: null
                }
            },

            series: [{
                
                name: 'USD to EUR',
                data:  [
                	  
                	   [('<%current_user.current_sign_in_at%>')],
                	   ['<%current_user.last_sign_in_at%>'.valueOf(), 5.0],
                	   ]
            }]
        });
    });
});
</script>

<div id="estadistica" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
